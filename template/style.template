/*

/* avatars */
.avatar .icon {
	font-weight: bold;
	margin-right: 2pt;
	border-radius: 2pt;
	padding: 1pt;
}
.avatar {
	border-radius: 1pt;
	color: $primaryColor;
	padding: 2pt;
}
.avatar .username {
	color: #e0e0e0;
	text-shadow:
	-1pt -1pt 0 #404040,
	1pt -1pt 0 #404040,
	-1pt 1pt 0 #404040,
	1pt 1pt 0 #404040;
}
a.avatar {
	text-decoration: none;
}

/* submit forms */
form.submit, form.reply {
	padding: 10pt;
}
form.submit .txtarea {
	width: 100%;
	height: 24ex;
}
form.reply .txtarea {
	width: 100%;
	height: 12ex;
}
.name {
    width: 100%;
    height: 12ex;
}
#privatekey {
	width: 100%;
	height: 24ex;
}
.instructions {
	color: black;
	font-family: sans-serif;
	padding: 5pt;
	font-size: large;
	line-height: 2;
}
.rmid {
    color: red;
}
button, input, input[type=submit], select {
	font-size: x-large;
}
textarea {
	font-family: monospace;
	font-size: large;
}

/* misc */
.plain {
	background-color: $secondaryColor;
	padding: 5pt;
	max-width: 60em;
}
.warning {
	background-color: #c08000;
}

/* pagination */
.pagination {
	font-family: sans-serif;
	font-size: x-large;
	spacing: 5pt;
}
.pagination b {
	padding: 5pt;
	border: 1pt solid $primaryColor;
	border-radius: 5pt;
	background-color: white;
}

/* summary styling */
summary {
	cursor: pointer;
}
