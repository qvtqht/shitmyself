/* flag buttons */
a.neg {
	color: #e08080;
}

/* avatars */
.avatar .icon {
	font-weight: bold;
	margin-right: 2pt;
}
.avatar {
	border-radius: 1pt;
	background-color: $secondaryColor;
	color: $primaryColor;
}

/* submit forms */
form.submit, form.reply {
	padding: 10pt;
}
form.submit .btn, form.reply .btn {
	background-color: $primaryColor;
	color: $secondaryColor;
	font-family: monospace;
	font-size: large;
	margin-top: 7pt;
}
form.submit .txtarea {
	width: 100%;
	height: 24ex;
}
form.reply .txtarea {
	width: 100%;
	height: 12ex;
}
.instructions {
	color: black;
	font-family: sans-serif;
	padding: 5pt;
	font-size: large;
	line-height: 2;
}

/* misc */
.plain {
	background-color: $secondaryColor;
	padding: 5pt;
	max-width: 60em;
}

/* pagination */
.pagination {
	font-family: sans-serif;
	font-size: large;
	spacing: 5pt;
}
.pagination b {
	padding: 5pt;
	border: 1pt solid $primaryColor;
	border-radius: 5pt;
	background-color: white;
}

/* summary styling */
summary {
	cursor: pointer;
}
