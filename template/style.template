/* body and headers */
body {
	font-family: courier, monospace;
	font-size: large;
	background-color: $secondaryColor;
	color: #$textColor;
}
a {
	color: $primaryColor;
}
a:visited {
	color: #806080;
}
h2.menu {
	border-style: 5pt solid $primaryColor;
	border-radius: 0pt 0pt 5pt 5pt;
}
h2.menu a {
	font-size: 18pt;
}
#logo {
	text-decoration: none;
	margin-right: 10pt;
	vertical-align: middle;
	font-size: 36pt;
	font-family: monospace;
	color: $secondaryColor;
	background-color: $primaryColor;
}
.topmessage {
	font-family: sans-serif;
	font-size: default;
	border: 2pt solid $primaryColor;
	border-radius: 5pt;
	background-color: $highlightColor;
	padding: 5pt;
}
.menu, .myid, #myAvatar, #myAvatar2 {
	font-weight: larger;
	font-family: sans-serif;
	font-weight: bold;
	color: gray;
}
.menu a {
	padding-left: 1em;
	font-family: monospace;
	font-size: large;
}
hr {
	color: $primaryColor;
}

.writeinfo {
	background-color: orange;
	color: black;
	border: 5pt solid yellow;
	padding: 5pt;
}

nobr {
	white-space: nowrap
}


/* textboxes */
.txt {
	padding: 3pt;
	font-family: monospace;
	word-wrap: break-word;
	max-width: 60em;
	margin: 8pt;
}
div.txt {
	border-top: 1pt dotted $primaryColor;
	border-left: 1pt dotted $primaryColor;
	border-bottom: 4pt double $primaryColor;
	border-right: 4pt double $primaryColor;
	border-radius: 10pt;
	padding-left: 1em;
}
.admin {
	background: repeating-linear-gradient(
		135deg,
		#ffffe0,
		#ffffe0 10px,
		#fffff0 10px,
		#fffff0 20px
   );
   border-radius: 8pt;
}
.signed {
	background-color: #fafdff;
}
.admin a .avatar {
	color: green;
}
.accepted {
	border: green 3pt;
}
details.txt a.header {
	font-family: monospace;
	font-weight: bold;
	font-size: larger;
}

/* vote summary */
.vote {
	text-decoration: underline;
	color: $primaryColor;
}

.voter summary {
	font-weight: bold;
}

/* submission textbox */
#comment, #submit {
	border-color: $primaryColor;
	border-width: 3pt;
	border-radius: 3pt;
	padding: 3pt;
}

