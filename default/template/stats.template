<!-- stats.template -->

<form action="/post.html">

<font face=arial>
	<table cellspacing=0 cellpadding=6 border=0 bgcolor="$colorWindow" class=dialog>
		<tr bgcolor=$colorTitlebar class=titlebar>
			<td>
				<font color=$colorTitlebarText><b>Status</b></font>
			</td>
		</tr>

		<tr class=body>
			<td class=content>
				<fieldset class=beginner>
					<p>Updated: $lastUpdateTime
					<p></p>
					<p>Root: $admin
				</fieldset>
				<fieldset class=advanced>
					<p><input type=submit name=comment value="Update">
					<p>Built: $lastBuildTime
					<p><a href="/index0.html">$itemsIndexed items</a>
					<p><a href="/data.html">$filesTotal files</a>
					<p><a href="/authors.html">$authorCount authors</a>
					<p><a href="/chain.log">$chainLogLength</a>
					<p>Server: $server
					<p>Version: $versionShort
				</fieldset>
			</td>
		</tr>
	</table>
</font>

</form>

<!-- / stats.template -->