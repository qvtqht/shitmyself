var commentOnChangeDone = 0;
function commentOnChange(t, formId) {
// changes form's method from get to post IF 
// comment's length is more than 1024 
	if (commentOnChangeDone) {
		return;
	}
		
	if (t.value.length <= 1024) {
		// do nothing
	} else {
		commentOnChangeDone = 1;
		if (document.getElementById) {
			form = document.getElementById(formId);
			if (form) {
				form.setAttribute('method', 'POST');
			}
		}
	}
}

